<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_gradient_style"  parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_gradient</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="fontWeight">700</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">#80000000</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#80000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>